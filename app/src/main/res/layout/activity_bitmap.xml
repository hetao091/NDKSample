<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_rotate"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:layout_weight="1"
            android:id="@+id/bt_bitmap_rotate_90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旋转90" />


        <Button
            android:layout_weight="1"
            android:id="@+id/bt_bitmap_rotate_180"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上下翻转" />


        <Button
            android:layout_weight="1"
            android:id="@+id/bt_bitmap_mirror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="镜像" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:id="@+id/bt_bitmap_filter_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="灰度图" />


        <Button
            android:layout_weight="1"
            android:id="@+id/bt_bitmap_filter_relief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浮雕图" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:id="@+id/bt_bitmap_pointer_rotate_90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="指针" />
    </LinearLayout>

</LinearLayout>
